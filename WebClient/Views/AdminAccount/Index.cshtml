@using BusinessObject.DTO
@model List<AccountDTO>

<div class="chit-chat-layer1">
    <div class="col-md-12">
        <div class="work-progres">
            <div class="chit-chat-heading">
                Account Management
                @*<div class="btn-group m-r-sm mail-hidden-options" style="display: inline-block;">
                    <div class="btn-group">
                    <a class="btn btn-default" data-toggle="dropdown" aria-expanded="false"><i class="fa fa-folder"></i> <span class="caret"></span></a>
                    <ul class="dropdown-menu dropdown-menu-right" role="menu">
                    <li><a href="#">Export File Excel</a></li>
                    <li><a href="#">Import FileExcel</a></li>
                    <li><a href="#">Updates</a></li>
                    <li class="divider"></li>
                    <li><a href="#">Export File PDF</a></li>
                    <li><a href="#">Import File PDF</a></li>
                    <li class="divider"></li>
                    <li><a asp-controller="adminaccount" asp-action="create">New</a></li>
                    </ul>
                    </div>
                    </div>*@
            </div>
            <div>
                <form asp-action="Index" method="get">
                    <div class="form-group">
                        <label for="searchString" class="control-label">Email: </label>
                        <input id="searchString" name="searchString"
                               class="form-control" value="@ViewData["SearchString"]" />
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Search" class="btn btn-primary" />
                    </div>
                </form>
            </div>
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>Email</th>
                            <th>Password</th>
                            <th>Customer Name</th>
                            <th>Employee Name</th>
                            <th>Role</th>
                            <th>Active</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @{
                            int index = (int)@ViewData["StartIndex"];
                        }
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@index</td> @{
                                    index++;
                                }
                                <td>@Html.DisplayFor(modelItem => item.Email)</td>
                                <td>@Html.DisplayFor(modelItem => item.Password)</td>
                                <td>@Html.DisplayFor(modelItem => item.CustomerName)</td>
                                <td>@Html.DisplayFor(modelItem => item.EmployeeName)</td>
                                <td>
                                    @if (item.Role == 1)
                                    {
                                        <span>Admin</span>
                                    }
                                    else
                                    {
                                        <span>User</span>
                                    }
                                </td>
                                @if (item.IsActive == true)
                                {
                                    <td><span class="label label-info">active</span></td>
                                }
                                else
                                {
                                    <td><span class="label label-danger">inactive</span></td>
                                }
                                <td>
                                    <div class="dropdown dropdown-inbox">
                                        <a href="#" title="" class="btn btn-default" data-toggle="dropdown" aria-expanded="false">
                                            <i class="fa fa-cog icon_8"></i>
                                            <i class="fa fa-chevron-down icon_8"></i>
                                            <div class="ripple-wrapper"></div>
                                        </a>
                                        <ul class="dropdown-menu float-right">
                                            @*<li>
                                                <a asp-controller="adminaccount" asp-action="edit" asp-route-id="@item.AccountId" title="">
                                                <i class="fa fa-pencil-square-o icon_9"> </i>
                                                Edit
                                                </a>
                                                </li>
                                                <li>
                                                <a href="#" title="">
                                                <i class="fa fa-calendar icon_9"> </i>
                                                Schedule
                                                </a>
                                                </li>
                                                <li>
                                                <a href="#" title="">
                                                <i class="fa fa-download icon_9"> </i>
                                                Download
                                                </a>
                                                </li>
                                                <li class="divider"></li>*@
                                            <li>
                                                <a asp-controller="adminaccount" asp-action="delete" asp-route-id="@item.AccountId" class="font-red" title="">
                                                    <i class="fa fa-times" icon_9=""> </i>
                                                    Delete
                                                </a>
                                            </li>
                                        </ul>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
                <span class="text-muted m-r-sm">Showing @ViewData["TotalOnPage"] of @ViewData["Total"] </span>
                <div class="btn-group-page" style="align-items">
                    @if ((int)(ViewData["PageNum"]) > 1)
                    {
                        <a asp-controller="adminaccount" asp-action="index" asp-route-PageNum=@((int)ViewData["PageNum"]-1) asp-route-searchString=@ViewData["SearchString"] class="btn btn-default"><i class="fa fa-angle-left"></i></a>
                    }
                    @for (var i = 1; i <= (int)(@ViewData["TotalPage"]); i++)
                    {
                        if ((i - (int)@ViewData["PageNum"]) <= 2 && (i - (int)@ViewData["PageNum"]) >= -2)
                        {
                            <a class="btn btn-default" asp-controller="adminaccount" asp-action="index" asp-route-PageNum=@i asp-route-searchString=@ViewData["SearchString"] style=@((int)(ViewData["PageNum"])==@i ? "background-color: #5BC0DE" : "")>@i</a>
                        }
                    }
                    @if ((int)ViewData["PageNum"] < (int)ViewData["TotalPage"])
                    {
                        <a asp-controller="adminaccount" asp-action="index" asp-route-PageNum=@((int)ViewData["PageNum"]+1) asp-route-searchString=@ViewData["SearchString"] class="btn btn-default"><i class="fa fa-angle-right"></i></a>
                    }
                </div>
            </div>
        </div>
    </div>
    <div class="clearfix"> </div>
</div>